<% if @contacts %>
<table class="table sortable table-hover">
	<!-- <col width="90"> -->
	<thead>
		<th class="sorttable_nosort">View</th>
		<th>ID</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th class="email-column">Email</th>
		<th>Group</th>
		<th class="sorttable_nosort note-column">Note</th>
		<th class="sorttable_nosort">Delete</th>
	</thead>
	<tbody>
		<% @contacts.each do |contact| %>
		<tr>
			<td><a class="btn btn-success btn-sm" id="view-option" href="/contacts/view/<%= contact.id %>">View</a></td>
			<td><%= contact.id %></td>
			<td><%= contact.first_name %></td>
			<td><%= contact.last_name %></td>
			<td><%= contact.email %></td>
			<form action="/contacts/<%= contact.group %>" method="post">
				<td><a type="submit" href="/contacts/<%= contact.group %>"><%= contact.group %></td>
			</form>
			<td class="note-column"><%= contact.note %></td>
			<form action="/contacts/delete/<%= contact.id %>" method="post">
				<input type="hidden" name="_method" value="delete" />
				<td><button class="btn btn-danger btn-sm" type="submit">Delete</button></td>
			</form>
		</tr>
		<% end %>
	</tbody>
</table>

<% else %>
	<h1>No Contacts</h1>
<% end %>